<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.feilonkji.www.dao.CommentMapper" >
    <resultMap type="com.feilonkji.www.entity.Comment" id="commentMap">
        <id property="id" column="id" />
        <result property="children" column="children" />
        <result property="conId" column="con_id" />
        <result property="comId" column="com_id" />
        <result property="byId" column="by_id" />
        <result property="upvote" column="upvote" />
        <result property="commTime" column="comm_time" />
        <result property="comContent" column="com_content" />
        <association property="user" javaType="com.feilonkji.www.entity.User">
            <id column="uid" property="id" />
                <result column="email" property="email" />
                <result column="password" property="password" />
                <result column="nick_name" property="nickName" />
                <result column="phone" property="phone" />
                <result column="state" property="state" />
                <result column="img_url" property="imgUrl" />
                <result column="enable" property="enable" />
        </association>
    </resultMap>

    <select id="selectAllComment" resultMap="commentMap" parameterType="java.lang.Long">
        select c.id,c.children,c.con_id,c.com_id,c.by_id,c.upvote,c.comm_time,c.com_content,u.id as uid,
        u.email,u.passwor,u.nick_name,u.phone,u.state,u.img_url,u.enable from comment c,user u where con_id=#{cid} and
        c.com_id = u.id order by id desc
    </select>

